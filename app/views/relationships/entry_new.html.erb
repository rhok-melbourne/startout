
<div id="emoticon-entry" class="row" style="display:none;height:100%;">
  <form role="form" style="width:100%;height:100%;" method="post" action="/relationships/<%=@relationship.id%>/entries">
    <div id="emoticon-entry-icon" style="height:33%;" name="emoticon"></div>
    <textarea class="form-control" name="text" rows="3" placeholder="How are you?"></textarea>
    <button type="submit" class="btn btn-default" style="width:100%;">Submit</button>
    <input type="hidden" name="entry_type" value="emoticon">
    <input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token">
    <input id="emoticon-entry-emoticon" type="hidden" name="emoticon">
  </form>
</div>

<div id="main-menu" style="height:100%;">
<div class="row" style="height:33%;">
  <div id="carousel-emoticon" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
      <div class="item active angry" data-emoticon="angry">
        &nbsp;
      </div>
<div class="item cheeky" data-emoticon="cheeky">
  &nbsp;
</div>
<div class="item confused" data-emoticon="confused">
  &nbsp;
</div>
<div class="item happy" data-emoticon="happy">
  &nbsp;
</div>
<div class="item hmm" data-emoticon="hmm">
  &nbsp;
</div>
<div class="item meh" data-emoticon="meh">
  &nbsp;
</div>
<div class="item sad" data-emoticon="sad">
  &nbsp;
</div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-emoticon" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-emoticon" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
</div>

<div class="row" style="height:33%;">
  <div id="carousel-question" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner" style="background-color:#16C1F3;">
      <div class="item active">
        <p>
          How are you feeling?
        </p>
      </div>
      <div class="item">
        <p>
          What are you doing today?
        </p>
      </div>
      <div class="item">
        <p>
          Anything new?
        </p>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-question" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-question" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
</div>

<div id="post-item" class="row">
  <div class="col-xs-12">
    <span class="glyphicon glyphicon-comment"></span>
  </div>
</div>
</div>
